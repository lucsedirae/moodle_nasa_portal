{{!
    @template local_message/manage

    Example context (json):
    {
        "url": "Web resolution image url",
        "copyright": "Copyright holder info",
        "date": "Date of publication",
        "explanation": "Description of photo",
        "hdurl": "High definition image url",
        "title": "Image title"
    }
}}

<h2>Astronomy Picture of the Day</h2>
<img src="{{url}}" alt="APOD" width="500">
<p>Title: "{{title}}" </p>
<p>Copyright: {{copyright}}</p>
<p>
    <a class="btn btn-primary" data-toggle="collapse" href="#moreInfo" role="button" aria-expanded="false"
       aria-controls="moreInfo">
        More information
    </a>
</p>
<div class="collapse" id="moreInfo">
    <div class="card card-body">
        <p>Astronomy picture of the day for <strong>{{date}}</strong></p>
        <p>{{explanation}}</p>
        <a class="btn btn-secondary" href="{{hdurl}}" target="_blank" rel="noreferrer" aria-expanded="false">High resolution image</a>
    </div>
</div>